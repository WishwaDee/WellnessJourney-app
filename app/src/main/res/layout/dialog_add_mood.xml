<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_surface"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your mood:"
        android:textColor="@color/color_text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_great"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ˜„\nGreat"
            android:textColor="@color/color_secondary"
            android:textSize="16sp"
            app:strokeColor="@color/color_secondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_happy"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ˜Š\nHappy"
            android:textColor="@color/color_secondary"
            android:textSize="16sp"
            app:strokeColor="@color/color_secondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_okay"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ˜\nOkay"
            android:textColor="@color/color_secondary"
            android:textSize="16sp"
            app:strokeColor="@color/color_secondary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sad"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ˜¢\nSad"
            android:textColor="@color/color_secondary"
            android:textSize="16sp"
            app:strokeColor="@color/color_secondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_angry"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="ðŸ˜ \nAngry"
            android:textColor="@color/color_secondary"
            android:textSize="16sp"
            app:strokeColor="@color/color_secondary"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Add a note (Optional)"
        app:boxBackgroundColor="@color/color_base"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:hintTextColor="@color/color_text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>