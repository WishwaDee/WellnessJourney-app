<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Wellness.Display" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wellness.TitleLarge" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wellness.TitleSmall" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Wellness.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Wellness.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_subtle</item>
    </style>

    <style name="TextAppearance.Wellness.SectionLabel" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Wellness.HabitIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@drawable/bg_habit_icon</item>
    </style>

    <style name="Widget.Wellness.MoodEmoji">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.Wellness.MoodChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/mood_chip_background</item>
        <item name="chipStrokeColor">@color/card_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="rippleColor">@color/habit_track</item>
    </style>
</resources>
